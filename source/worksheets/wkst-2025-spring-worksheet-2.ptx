                  <cell><m>l</m></cell>
                  <cell><m>r</m></cell>
                  <cell><m>l \vee \neg r</m></cell>
                  <cell><m>r \wedge \neg j</m></cell>
                  <cell><m>\neg j \rightarrow l \vee \neg r</m></cell>
                  <cell><m>r \wedge \neg j \rightarrow l</m></cell>
